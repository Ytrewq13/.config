# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
        interval = 1
}

order += "group uptime"
order += "group disks"
order += "group inet"
order += "group cpu"
order += "group power"
order += "group time"

group uptime {
    uptime {}
}

group inet {
    button_next = 1

    online_status {}
    frame inet {
        wireless _first_ {
            format_up = "W:(%quality %essid) %ip"
            format_down = ""
        }
        ethernet _first_ {
            # if you use %speed, i3status requires root privileges
            format_up = "ðŸ–§ : %ip (%speed)"
            format_down = ""
        }
    }
}

group cpu {
    button_next = 1
    min_length = 10
        cpu_temperature 0 {
            format = "CPU: %degreesÂ°C"
            path = "/sys/class/hwmon/hwmon4/temp1_input"  # Framework laptop
            # LABEL SHOULD BE 'Package id 0'
            # cat /sys/class/hwmon/hwmon?/temp?_label
        }
        cpu_temperature 1 {
            format = "WIFI: %degreesÂ°C"
            path = "/sys/class/hwmon/hwmon5/temp1_input"  # Framework laptop
            # NAME SHOULD BE 'iwlwifi_1'
            # cat /sys/class/hwmon/hwmon?/name
        }
        cpu_temperature 2 {
            format = "SSD: %degreesÂ°C"
            path = "/sys/class/hwmon/hwmon3/temp1_input"  # Framework laptop
            # NAME SHOULD BE 'nvme'
            # cat /sys/class/hwmon/hwmon?/name
        }
    cpu_usage {
        format = "CPU: %usage"
    }
}

group power {
    battery 1 {
        format = "%status %percentage %remaining"
        format_down = ""
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
    }
}

group disks {
    disk "/" {
        format = "%avail"
    }
}

group time {
    button_next = 1

        tztime local {
            format = "%a %F %T"
        }

    tztime china {
        format = "UTC %F %T"
            timezone = "Europe/London"
    }
}
